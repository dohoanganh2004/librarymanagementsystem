@using ELibrary.WebApp.DTO.Response
@using ELibrary.WebApp.Models
@model PaginationModel<BookResponseDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quản Lý Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow-sm">

        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-book"></i> Danh Sách Sách</h4>

            <div class="d-flex">
                <a asp-action="ExportExcel" asp-controller="Book" class="btn btn-info btn-sm me-2" title="Xuất dữ liệu ra Excel">
                    <i class="fas fa-file-export"></i> Export Excel
                </a>

                <a asp-action="ImportExcel" asp-controller="Book" class="btn btn-secondary btn-sm me-2" title="Nhập dữ liệu từ Excel">
                    <i class="fas fa-file-import"></i> Import Excel
                </a>

                <a asp-action="Create" asp-controller="Book" class="btn btn-warning btn-sm">
                    <i class="fas fa-plus"></i> Thêm Sách Mới
                </a>
            </div>
        </div>

        <div class="card-body">
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <input type="text" name="title" class="form-control" placeholder="Tìm theo tên sách..." value="@ViewBag.CurrentSearch?.Title" />
                    </div>
                    <div class="col-md-2">
                        <select name="category" class="form-select">
                            <option value="">Tất cả thể loại</option>
                            @foreach (var cat in ViewBag.Categories)
                            {
                                @if (cat.CategoryId == ViewBag.CurrentSearch?.CategoryId)
                                {
                                    <option value="@cat.CategoryId" selected>@cat.CategoryName</option>
                                }
                                else
                                {
                                    <option value="@cat.CategoryId">@cat.CategoryName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select name="publisher" class="form-select">
                            <option value="">Tất cả NXB</option>
                            @foreach (var pub in ViewBag.Publishers)
                            {
                                @if (pub.PublisherId == ViewBag.CurrentSearch?.PublisherId)
                                {
                                    <option value="@pub.PublisherId" selected>@pub.PublisherName</option>
                                }
                                else
                                {
                                    <option value="@pub.PublisherId">@pub.PublisherName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="text" name="author" class="form-control" placeholder="Tác giả..." value="@ViewBag.CurrentSearch?.Author" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" name="language" class="form-control" placeholder="Ngôn ngữ..." value="@ViewBag.CurrentSearch?.Language" />
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>

            @if (!Model.Items.Any())
            {
                <div class="alert alert-info text-center">
                    @if (Model.TotalItems == 0)
                    {
                        <span>Chưa có sách nào trong thư viện.</span>
                    }
                    else
                    {
                        <span>Không tìm thấy sách nào phù hợp với điều kiện tìm kiếm.</span>
                    }
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Tác Giả</th>
                                <th>Thể Loại</th>
                                <th>Năm xuất bản</th>
                                <th>Số Lượng</th>
                                <th>Trạng Thái</th>
                                <th class="text-center">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model.Items)
                            {
                                <tr>
                                    <td>@book.BookId</td>
                                    <td>@book.Title</td>
                                    <td>@book.AuthorName</td>
                                    <td>@book.CategoryName</td>
                                    <td>@book.PublicationYear</td>
                                    <td>@book.Quantity</td>
                                    <td>
                                        @if (book.Status == true)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Không hoạt động</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Update" asp-route-id="@book.BookId" class="btn btn-sm btn-info me-1" title="Chỉnh sửa"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Detail" asp-route-id="@book.BookId" class="btn btn-sm btn-secondary me-1" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                                        <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-sm btn-danger" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @await Html.PartialAsync("_BookPagination", Model)
            }
        </div>
    </div>
</div>