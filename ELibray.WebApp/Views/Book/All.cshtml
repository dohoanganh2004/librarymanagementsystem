@using ELibrary.WebApp.DTO.Response
@using ELibrary.WebApp.Models
@model PaginationModel<BookResponseDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Thư Viện Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold text-primary mb-2">
                        <i class="fas fa-book-open me-2"></i>Thư Viện Sách
                    </h1>
                    <p class="text-muted mb-0">Khám phá kho tàng tri thức với @(Model?.TotalItems ?? 0) cuốn sách</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                        <i class="fas fa-filter me-1"></i>Bộ lọc
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-sort me-1"></i>Sắp xếp
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Tên A-Z</a></li>
                            <li><a class="dropdown-item" href="#">Tên Z-A</a></li>
                            <li><a class="dropdown-item" href="#">Năm xuất bản mới nhất</a></li>
                            <li><a class="dropdown-item" href="#">Năm xuất bản cũ nhất</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section (Collapsible) -->
    <div class="collapse mb-4" id="filterCollapse">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h6 class="mb-0 text-primary">
                    <i class="fas fa-search me-2"></i>Tìm kiếm và lọc sách
                </h6>
            </div>
            <div class="card-body">
                <form method="get" asp-action="All" asp-controller="Book">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Tên sách</label>
                            <input type="text" class="form-control" name="title" placeholder="Nhập tên sách..." value="@ViewBag.CurrentSearch?.Title">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Thể loại</label>
                            <select class="form-select" name="category">
                                <option value="">Tất cả</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.CategoryId" selected="@(ViewBag.CurrentSearch?.CategoryId == category.CategoryId)">
                                        @category.CategoryName
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Nhà xuất bản</label>
                            <select class="form-select" name="publisher">
                                <option value="">Tất cả</option>
                                @foreach (var publisher in ViewBag.Publishers)
                                {
                                    <option value="@publisher.PublisherId" selected="@(ViewBag.CurrentSearch?.PublisherId == publisher.PublisherId)">
                                        @publisher.PublisherName
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Tác giả</label>
                            <input type="text" class="form-control" name="author" placeholder="Tên tác giả..." value="@ViewBag.CurrentSearch?.Author">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Ngôn ngữ</label>
                            <input type="text" class="form-control" name="language" placeholder="VN, EN..." value="@ViewBag.CurrentSearch?.Language">
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button class="btn btn-primary w-100" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <a href="@Url.Action("All")" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times me-1"></i>Xóa bộ lọc
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Books Grid -->
    <div class="row">
        @if (Model?.Items?.Any() ?? false)
        {
            @foreach (var book in Model.Items)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card book-card h-100 shadow-sm border-0 position-relative overflow-hidden">
                        <!-- Status Badge -->
                        @if (book.Quantity > 0)
                        {
                            <span class="badge bg-success position-absolute top-0 end-0 m-2 z-index-1">Có sẵn</span>
                        }
                        else
                        {
                            <span class="badge bg-danger position-absolute top-0 end-0 m-2 z-index-1">Hết sách</span>
                        }

                        <!-- Book Image -->
                        <div class="book-image-container position-relative overflow-hidden">
                            @if (!string.IsNullOrEmpty(book.Image))
                            {
                                <img src="@book.Image" class="card-img-top book-image" alt="@book.Title">
                            }
                            else
                            {
                                <div class="card-img-top book-image d-flex align-items-center justify-content-center bg-light">
                                    <i class="fas fa-book fa-3x text-muted"></i>
                                </div>
                            }
                            
                            <!-- Hover Overlay -->
                            <div class="book-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center">
                                <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.BookId" 
                                   class="btn btn-primary btn-sm me-2">
                                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                                </a>
                                @if (book.Quantity > 0)
                                {
                                    <a asp-controller="Reservation"
                                       asp-action="Create"
                                       asp-route-bookId="@book.BookId"
                                       class="btn btn-success btn-sm">
                                        <i class="fas fa-bookmark me-1"></i>Đặt sách
                                    </a>
                                }

                            </div>
                        </div>

                        <!-- Book Info -->
                        <div class="card-body p-3">
                            <h6 class="card-title fw-bold text-truncate mb-2" title="@book.Title">
                                @book.Title
                            </h6>
                            
                            <div class="book-meta text-muted small">
                                <div class="d-flex align-items-center mb-1">
                                    <i class="fas fa-user-edit me-2 text-primary"></i>
                                    <span class="text-truncate">@(book.AuthorName ?? "Chưa rõ")</span>
                                </div>
                                <div class="d-flex align-items-center mb-1">
                                    <i class="fas fa-tags me-2 text-success"></i>
                                    <span class="text-truncate">@(book.CategoryName ?? "Chưa phân loại")</span>
                                </div>
                                <div class="d-flex align-items-center mb-1">
                                    <i class="fas fa-building me-2 text-info"></i>
                                    <span class="text-truncate">@(book.PublisherName ?? "Chưa rõ")</span>
                                </div>
                                @if (book.PublicationYear.HasValue)
                                {
                                    <div class="d-flex align-items-center mb-1">
                                        <i class="fas fa-calendar me-2 text-warning"></i>
                                        <span>@book.PublicationYear</span>
                                    </div>
                                }
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-light text-dark">
                                    <i class="fas fa-copy me-1"></i>@book.Quantity cuốn
                                </span>
                                @if (!string.IsNullOrEmpty(book.Language))
                                {
                                    <span class="badge bg-secondary">@book.Language</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-search fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">
                        @if (Model?.TotalItems == 0)
                        {
                            <span>Chưa có sách nào trong thư viện</span>
                        }
                        else
                        {
                            <span>Không tìm thấy sách phù hợp</span>
                        }
                    </h4>
                    <p class="text-muted mb-4">Hãy thử điều chỉnh bộ lọc hoặc từ khóa tìm kiếm</p>
                    <a href="@Url.Action("All")" class="btn btn-primary">
                        <i class="fas fa-refresh me-2"></i>Xem tất cả sách
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Book pagination">
                    @await Html.PartialAsync("_BookPagination", Model)
                </nav>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .book-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }
        
        .book-image-container {
            height: 250px;
            position: relative;
        }
        
        .book-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .book-overlay {
            background: rgba(0,0,0,0.7);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .book-card:hover .book-overlay {
            opacity: 1;
        }
        
        .book-card:hover .book-image {
            transform: scale(1.05);
        }
        
        .book-meta i {
            width: 16px;
            text-align: center;
        }
        
        .z-index-1 {
            z-index: 1;
        }
    </style>
}

@section Scripts {
    <script>
        function reserveBook(bookId) {
            // Implement reservation logic here
            alert('Chức năng đặt chỗ sách ID: ' + bookId);
        }
        
        // Auto-submit form when dropdown changes
        document.querySelectorAll('select[name="category"], select[name="publisher"]').forEach(select => {
            select.addEventListener('change', function() {
                this.form.submit();
            });
        });
    </script>
}
