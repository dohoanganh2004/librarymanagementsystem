    <script>
        function reserveBook(bookId) {
            // Implement reservation logic
            alert('Đặt chỗ sách ID: ' + bookId);
        }
        
        function borrowBook(bookId) {
            // Implement borrow logic
            alert('Mượn sách ID: ' + bookId);
        }
        
        function notifyWhenAvailable(bookId) {
            // Implement notification logic
            alert('Đăng ký thông báo cho sách ID: ' + bookId);
        }
        
        function addToWishlist(bookId) {
            // Implement wishlist logic
            alert('Thêm vào yêu thích sách ID: ' + bookId);
        }
        
        function shareBook(bookId) {
            // Implement share logic
            if (navigator.share) {
                navigator.share({
                    title: '@Model?.Title',
                    text: 'Xem cuốn sách hay này: @Model?.Title',
                    url: window.location.href
                });
            } else {
                // Fallback: copy to clipboard
                navigator.clipboard.writeText(window.location.href);
                alert('Đã sao chép link vào clipboard!');
            }
        }
        
        function writeReview(bookId) {
