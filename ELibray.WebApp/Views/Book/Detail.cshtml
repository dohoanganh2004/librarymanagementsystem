@using ELibrary.WebApp.DTO.Response
@model BookResponseDTO
@{
    ViewData["Title"] = Model?.Title ?? "Chi tiết sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    @if (Model != null)
    {
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Book" asp-action="All" class="text-decoration-none">
                        <i class="fas fa-home me-1"></i>Thư viện
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Book" asp-action="All" asp-route-category="@Model.CategoryId" class="text-decoration-none">
                        @(Model.CategoryName ?? "Sách")
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Book Image & Actions -->
            <div class="col-lg-4 mb-4">
                <div class="sticky-top" style="top: 100px;">
                    <!-- Book Cover -->
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="book-cover-container position-relative">
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="@Model.Image" class="card-img book-cover" alt="@Model.Title">
                            }
                            else
                            {
                                <div class="card-img book-cover d-flex align-items-center justify-content-center bg-light">
                                    <i class="fas fa-book fa-5x text-muted"></i>
                                </div>
                            }
                            
                            <!-- Status Badge -->
                            @if (Model.Quantity > 0)
                            {
                                <span class="badge bg-success position-absolute top-0 end-0 m-3 fs-6">
                                    <i class="fas fa-check-circle me-1"></i>Có sẵn
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-3 fs-6">
                                    <i class="fas fa-times-circle me-1"></i>Hết sách
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                @if (Model.Quantity > 0)
                                {
                                    <a asp-controller="Reservation"
                                       asp-action="Create"
                                       asp-route-bookId="@Model.BookId"
                                       class="btn btn-primary btn-lg">
                                        <i class="fas fa-bookmark me-2"></i>Đặt sách này
                                    </a>
                                   
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-lg" disabled>
                                        <i class="fas fa-times me-2"></i>Tạm hết sách
                                    </button>
                                    <button class="btn btn-outline-primary" onclick="notifyWhenAvailable(@Model.BookId)">
                                        <i class="fas fa-bell me-2"></i>Thông báo khi có sách
                                    </button>
                                }
                                
                                <hr class="my-3">
                                
                                <button class="btn btn-outline-danger" onclick="addToWishlist(@Model.BookId)">
                                    <i class="fas fa-heart me-2"></i>Thêm vào yêu thích
                                </button>
                                <button class="btn btn-outline-info" onclick="shareBook(@Model.BookId)">
                                    <i class="fas fa-share-alt me-2"></i>Chia sẻ
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Stats -->
                    <div class="card shadow-sm border-0 mt-3">
                        <div class="card-header bg-light">
                            <h6 class="mb-0 text-primary">
                                <i class="fas fa-chart-bar me-2"></i>Thống kê
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="border-end">
                                        <h5 class="text-primary mb-0">@(Model.Quantity ?? 0)</h5>
                                        <small class="text-muted">Có sẵn</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border-end">
                                        <h5 class="text-success mb-0">0</h5>
                                        <small class="text-muted">Đã mượn</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <h5 class="text-warning mb-0">0</h5>
                                    <small class="text-muted">Đặt chỗ</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Book Details -->
            <div class="col-lg-8">
                <!-- Title & Basic Info -->
                <div class="mb-4">
                    <h1 class="display-5 fw-bold text-primary mb-3">@Model.Title</h1>
                    
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-edit text-primary me-3 fa-lg"></i>
                                <div>
                                    <small class="text-muted d-block">Tác giả</small>
                                    <strong>@(Model.AuthorName ?? "Chưa rõ")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-tags text-success me-3 fa-lg"></i>
                                <div>
                                    <small class="text-muted d-block">Thể loại</small>
                                    <strong>@(Model.CategoryName ?? "Chưa phân loại")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-building text-info me-3 fa-lg"></i>
                                <div>
                                    <small class="text-muted d-block">Nhà xuất bản</small>
                                    <strong>@(Model.PublisherName ?? "Chưa rõ")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar text-warning me-3 fa-lg"></i>
                                <div>
                                    <small class="text-muted d-block">Năm xuất bản</small>
                                    <strong>@(Model.PublicationYear?.ToString() ?? "Chưa rõ")</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Info Badges -->
                    <div class="d-flex flex-wrap gap-2 mb-4">
                        @if (!string.IsNullOrEmpty(Model.Language))
                        {
                            <span class="badge bg-secondary fs-6">
                                <i class="fas fa-language me-1"></i>@Model.Language
                            </span>
                        }
                        @if (Model.PageCount.HasValue && Model.PageCount > 0)
                        {
                            <span class="badge bg-info fs-6">
                                <i class="fas fa-file-alt me-1"></i>@Model.PageCount trang
                            </span>
                        }
                        @if (Model.Status == true)
                        {
                            <span class="badge bg-success fs-6">
                                <i class="fas fa-check me-1"></i>Đang hoạt động
                            </span>
                        }
                    </div>
                </div>

                <!-- Tabs -->
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <ul class="nav nav-tabs card-header-tabs" id="bookTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab">
                                    <i class="fas fa-align-left me-2"></i>Mô tả
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab">
                                    <i class="fas fa-info-circle me-2"></i>Thông tin chi tiết
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab">
                                    <i class="fas fa-star me-2"></i>Đánh giá
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="related-tab" data-bs-toggle="tab" data-bs-target="#related" type="button" role="tab">
                                    <i class="fas fa-books me-2"></i>Sách liên quan
                                </button>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="bookTabsContent">
                            <!-- Description Tab -->
                            <div class="tab-pane fade show active" id="description" role="tabpanel">
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <div class="prose">
                                        <p class="lead text-muted mb-4">@Model.Description</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">Chưa có mô tả cho cuốn sách này.</p>
                                    </div>
                                }
                            </div>

                            <!-- Details Tab -->
                            <div class="tab-pane fade" id="details" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-6">
                                        <table class="table table-borderless">
                                            <tr>
                                                <td class="fw-semibold text-muted">Mã sách:</td>
                                                <td>@Model.BookId</td>
                                            </tr>
                                            <tr>
                                                <td class="fw-semibold text-muted">Tác giả:</td>
                                                <td>@(Model.AuthorName ?? "Chưa rõ")</td>
                                            </tr>
                                            <tr>
                                                <td class="fw-semibold text-muted">Thể loại:</td>
                                                <td>@(Model.CategoryName ?? "Chưa phân loại")</td>
                                            </tr>
                                            <tr>
                                                <td class="fw-semibold text-muted">Nhà xuất bản:</td>
                                                <td>@(Model.PublisherName ?? "Chưa rõ")</td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <table class="table table-borderless">
                                            <tr>
                                                <td class="fw-semibold text-muted">Năm xuất bản:</td>
                                                <td>@(Model.PublicationYear?.ToString() ?? "Chưa rõ")</td>
                                            </tr>
                                            <tr>
                                                <td class="fw-semibold text-muted">Số trang:</td>
                                                <td>@(Model.PageCount?.ToString() ?? "Chưa rõ")</td>
                                            </tr>
                                            <tr>
                                                <td class="fw-semibold text-muted">Ngôn ngữ:</td>
                                                <td>@(Model.Language ?? "Chưa rõ")</td>
                                            </tr>
                                            <tr>
                                                <td class="fw-semibold text-muted">Số lượng:</td>
                                                <td>
                                                    <span class="badge bg-primary">@(Model.Quantity ?? 0) cuốn</span>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- Reviews Tab -->
                            <div class="tab-pane fade" id="reviews" role="tabpanel">
                                <div class="text-center py-5">
                                    <i class="fas fa-star fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted mb-3">Chưa có đánh giá</h5>
                                    <p class="text-muted mb-4">Hãy là người đầu tiên đánh giá cuốn sách này!</p>
                                    <button class="btn btn-primary" onclick="writeReview(@Model.BookId)">
                                        <i class="fas fa-edit me-2"></i>Viết đánh giá
                                    </button>
                                </div>
                            </div>

                            <!-- Related Books Tab -->
                            <div class="tab-pane fade" id="related" role="tabpanel">
                                <div class="text-center py-5">
                                    <i class="fas fa-books fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted mb-3">Sách liên quan</h5>
                                    <p class="text-muted mb-4">Khám phá thêm những cuốn sách cùng thể loại hoặc tác giả.</p>
                                    <a asp-controller="Book" asp-action="All" asp-route-category="@Model.CategoryId" class="btn btn-outline-primary me-2">
                                        <i class="fas fa-tags me-1"></i>Cùng thể loại
                                    </a>
                                    <a asp-controller="Book" asp-action="All" asp-route-author="@Model.AuthorName" class="btn btn-outline-success">
                                        <i class="fas fa-user-edit me-1"></i>Cùng tác giả
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Book Not Found -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-exclamation-triangle fa-4x text-warning"></i>
            </div>
            <h2 class="text-muted mb-3">Không tìm thấy sách</h2>
            <p class="text-muted mb-4">Cuốn sách bạn đang tìm kiếm không tồn tại hoặc đã bị xóa.</p>
            <a asp-controller="Book" asp-action="All" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại thư viện
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        .book-cover-container {
            height: 400px;
            overflow: hidden;
            border-radius: 8px;
        }
        
        .book-cover {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        
        .book-cover:hover {
            transform: scale(1.05);
        }
        
        .prose p {
            line-height: 1.8;
            font-size: 1.1rem;
        }
        
        .nav-tabs .nav-link {
            border: none;
            color: #6c757d;
            font-weight: 500;
        }
        
        .nav-tabs .nav-link.active {
            background-color: transparent;
            border-bottom: 2px solid #0d6efd;
            color: #0d6efd;
        }
        
        .table td {
            padding: 0.75rem 0;
            border: none;
        }
        
        .sticky-top {
            position: sticky;
        }
        
       
    </style>
}

