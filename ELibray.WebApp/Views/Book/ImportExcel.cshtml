@{
    ViewData["Title"] = "Import Excel - Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-import"></i> Import Sách từ Excel
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["error"]
                        </div>
                    }

                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> @TempData["success"]
                        </div>
                    }

                    <form asp-action="ImportExcel" method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Chọn file Excel:</label>
                            <input type="file" name="excelFile" class="form-control" accept=".xlsx,.xls" required />
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> 
                                Chỉ chấp nhận file Excel (.xlsx, .xls). Kích thước tối đa: 5MB
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fas fa-table"></i> Định dạng file Excel yêu cầu:</h6>
                            <table class="table table-sm table-bordered mt-2">
                                <thead>
                                    <tr>
                                        <th>Cột A</th>
                                        <th>Cột B</th>
                                        <th>Cột C</th>
                                        <th>Cột D</th>
                                        <th>Cột E</th>
                                        <th>Cột F</th>
                                        <th>Cột G</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>BookId</td>
                                        <td>Title</td>
                                        <td>Author</td>
                                        <td>Category</td>
                                        <td>Publisher</td>
                                        <td>Year</td>
                                        <td>Quantity</td>
                                    </tr>
                                </tbody>
                            </table>
                            <small class="text-muted">
                                <i class="fas fa-lightbulb"></i> 
                                Dòng đầu tiên phải là header. Dữ liệu bắt đầu từ dòng 2.
                            </small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Book/List" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            
                            <div>
                                <a href="/Book/ExportExcel" class="btn btn-outline-info me-2" target="_blank">
                                    <i class="fas fa-download"></i> Tải mẫu Excel
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-upload"></i> Import Excel
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_Footer")

@section Scripts {
    <script>
        // Validate file before submit
        document.querySelector('form').addEventListener('submit', function(e) {
            const fileInput = document.querySelector('input[type="file"]');
            const file = fileInput.files[0];
            
            if (!file) {
                e.preventDefault();
                alert('Vui lòng chọn file Excel');
                return;
            }
            
            const allowedTypes = ['.xlsx', '.xls'];
            const fileName = file.name.toLowerCase();
            const isValidType = allowedTypes.some(type => fileName.endsWith(type));
            
            if (!isValidType) {
                e.preventDefault();
                alert('Chỉ chấp nhận file Excel (.xlsx, .xls)');
                return;
            }
            
            if (file.size > 5 * 1024 * 1024) {
                e.preventDefault();
                alert('File không được vượt quá 5MB');
                return;
            }
        });
    </script>
}