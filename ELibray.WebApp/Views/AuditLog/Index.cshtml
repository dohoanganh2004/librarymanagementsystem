@using E_Library.Models
@model ELibrary.WebApp.Models.PaginationModel<AuditLog>

@{
    ViewData["Title"] = "Quản Lý Log Hệ Thống";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">
                <i class="fas fa-history"></i> Log Hoạt Động Hệ Thống
            </h4>
        </div>

        <div class="card-body">
            <form method="get" class="row g-3 mb-4">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm:</label>
                    <input type="text" name="search" class="form-control" 
                               value="@ViewBag.CurrentSearch" placeholder="Tìm theo mô tả hoặc tên nhân viên...">
                </div>
            
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <a href="/AuditLog" class="btn btn-secondary">
                        <i class="fas fa-refresh"></i> Reset
                    </a>
                </div>
            </form>

            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h5>@Model.TotalItems</h5>
                            <small>Tổng số log</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h5>@Model.TotalPages</h5>
                            <small>Tổng số trang</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h5>@Model.CurrentPage</h5>
                            <small>Trang hiện tại</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <h5>@Model.PageSize</h5>
                            <small>Số dòng/trang</small>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Thời gian</th>
                                <th>Nhân viên</th>
                                <th>Hành động</th>
                                <th>Bảng</th>
                                <th>Record ID</th>
                                <th class="text-center">Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.Items)
                            {
                                <tr>
                                    <td>@log.LogId</td>
                                    <td>
                                        <small>
                                            @log.Timestamp?.ToString("dd/MM/yyyy HH:mm:ss")
                                        </small>
                                    </td>
                                    <td>
                                        <strong>@log.Employee?.FirstName @log.Employee?.LastName</strong>
                                        <br>
                                        <small class="text-muted">ID: @log.EmployeeId</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@log.Description</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.TableName))
                                        {
                                            <span class="badge bg-secondary">@log.TableName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (log.RecordId.HasValue)
                                        {
                                            <span class="badge bg-primary">@log.RecordId</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="/AuditLog/Details/@log.LogId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <nav aria-label="Audit log pagination">
                    <ul class="pagination justify-content-center">
                        @{
                            // Tạo chuỗi truy vấn cơ bản, chỉ thiếu số trang (page)
                            string queryParams = $"&pageSize={Model.PageSize}&search={ViewBag.CurrentSearch}&tableName={ViewBag.CurrentTableName}&employeeId={ViewBag.CurrentEmployeeId}";
                        }

                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=1@queryParams">
                                    <i class="fas fa-angle-double-left"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.CurrentPage - 1)@queryParams">
                                    <i class="fas fa-angle-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i@queryParams">
                                    @i
                                </a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.CurrentPage + 1)@queryParams">
                                    <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="?page=@Model.TotalPages@queryParams">
                                    <i class="fas fa-angle-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> Không có log nào được tìm thấy.
                </div>
            }
        </div>
    </div>
</div>

@await Html.PartialAsync("_Footer")