@using ELibrary.WebApp.DTO.Request
@model ChangePasswordRequestDTO

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="changePasswordModalLabel">
                    <i class="fas fa-key me-2"></i>Đổi mật khẩu
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Lưu ý:</strong> Mật khẩu mới phải có ít nhất 6 ký tự và khác với mật khẩu hiện tại.
                </div>

                <form id="modalChangePasswordForm">
                    <div class="row">
                        <div class="col-12">
                            <!-- Current Password -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lock me-2 text-muted"></i>Mật khẩu hiện tại
                                </label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="modalCurrentPassword" placeholder="Nhập mật khẩu hiện tại..." required />
                                    <button class="btn btn-outline-secondary" type="button" onclick="toggleModalPassword('modalCurrentPassword')">
                                        <i class="fas fa-eye" id="modalCurrentPassword-icon"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="modalCurrentPassword-error"></div>
                            </div>

                            <!-- New Password -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-key me-2 text-muted"></i>Mật khẩu mới
                                </label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="modalNewPassword" placeholder="Nhập mật khẩu mới..." required />
                                    <button class="btn btn-outline-secondary" type="button" onclick="toggleModalPassword('modalNewPassword')">
                                        <i class="fas fa-eye" id="modalNewPassword-icon"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="modalNewPassword-error"></div>
                                
                                <!-- Password Strength Indicator -->
                                <div class="mt-2">
                                    <div class="progress" style="height: 5px;">
                                        <div class="progress-bar" id="modalPasswordStrength" role="progressbar" style="width: 0%"></div>
                                    </div>
                                    <small class="text-muted" id="modalPasswordStrengthText">Độ mạnh mật khẩu</small>
                                </div>
                            </div>

                            <!-- Confirm Password -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-check-circle me-2 text-muted"></i>Xác nhận mật khẩu mới
                                </label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="modalConfirmPassword" placeholder="Nhập lại mật khẩu mới..." required />
                                    <button class="btn btn-outline-secondary" type="button" onclick="toggleModalPassword('modalConfirmPassword')">
                                        <i class="fas fa-eye" id="modalConfirmPassword-icon"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="modalConfirmPassword-error"></div>
                                <div class="mt-1">
                                    <small class="text-muted" id="modalPasswordMatch"></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Security Tips -->
                    <div class="alert alert-light border" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-shield-alt me-2 text-success"></i>Mẹo bảo mật
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="mb-0 small">
                                    <li>Sử dụng ít nhất 8 ký tự</li>
                                    <li>Kết hợp chữ hoa, chữ thường</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="mb-0 small">
                                    <li>Thêm số và ký tự đặc biệt</li>
                                    <li>Không chia sẻ với người khác</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Hủy bỏ
                </button>
                <button type="button" class="btn btn-primary" id="modalSubmitBtn" onclick="submitModalChangePassword()">
                    <i class="fas fa-save me-2"></i>Đổi mật khẩu
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Toggle password visibility in modal
    function toggleModalPassword(fieldName) {
        const field = document.getElementById(fieldName);
        const icon = document.getElementById(fieldName + '-icon');
        
        if (field.type === 'password') {
            field.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            field.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }
    
    // Password strength checker for modal
    function checkModalPasswordStrength(password) {
        let strength = 0;
        let feedback = '';
        
        if (password.length >= 6) strength += 1;
        if (password.length >= 8) strength += 1;
        if (/[a-z]/.test(password)) strength += 1;
        if (/[A-Z]/.test(password)) strength += 1;
        if (/[0-9]/.test(password)) strength += 1;
        if (/[^A-Za-z0-9]/.test(password)) strength += 1;
        
        const progressBar = document.getElementById('modalPasswordStrength');
        const strengthText = document.getElementById('modalPasswordStrengthText');
        
        if (strength <= 2) {
            progressBar.style.width = '33%';
            progressBar.className = 'progress-bar bg-danger';
            feedback = 'Yếu';
        } else if (strength <= 4) {
            progressBar.style.width = '66%';
            progressBar.className = 'progress-bar bg-warning';
            feedback = 'Trung bình';
        } else {
            progressBar.style.width = '100%';
            progressBar.className = 'progress-bar bg-success';
            feedback = 'Mạnh';
        }
        
        strengthText.textContent = `Độ mạnh: ${feedback}`;
        return strength;
    }
    
    // Check password match in modal
    function checkModalPasswordMatch() {
        const newPassword = document.getElementById('modalNewPassword').value;
        const confirmPassword = document.getElementById('modalConfirmPassword').value;
        const matchText = document.getElementById('modalPasswordMatch');
        
        if (confirmPassword === '') {
            matchText.textContent = '';
            return;
        }
        
        if (newPassword === confirmPassword) {
            matchText.textContent = '✓ Mật khẩu khớp';
            matchText.className = 'text-success small';
        } else {
            matchText.textContent = '✗ Mật khẩu không khớp';
            matchText.className = 'text-danger small';
        }
    }
    
    // Submit modal change password
    function submitModalChangePassword() {
        const currentPassword = document.getElementById('modalCurrentPassword').value;
        const newPassword = document.getElementById('modalNewPassword').value;
        const confirmPassword = document.getElementById('modalConfirmPassword').value;
        
        // Clear previous errors
        document.querySelectorAll('.invalid-feedback').forEach(el => {
            el.textContent = '';
            el.previousElementSibling.classList.remove('is-invalid');
        });
        
        let hasError = false;
        
        // Validation
        if (!currentPassword) {
            showModalError('modalCurrentPassword', 'Vui lòng nhập mật khẩu hiện tại');
            hasError = true;
        }
        
        if (!newPassword) {
            showModalError('modalNewPassword', 'Vui lòng nhập mật khẩu mới');
            hasError = true;
        } else if (newPassword.length < 6) {
            showModalError('modalNewPassword', 'Mật khẩu mới phải có ít nhất 6 ký tự');
            hasError = true;
        }
        
        if (!confirmPassword) {
            showModalError('modalConfirmPassword', 'Vui lòng xác nhận mật khẩu mới');
            hasError = true;
        } else if (newPassword !== confirmPassword) {
            showModalError('modalConfirmPassword', 'Mật khẩu xác nhận không khớp');
            hasError = true;
        }
        
        if (currentPassword === newPassword) {
            showModalError('modalNewPassword', 'Mật khẩu mới phải khác với mật khẩu hiện tại');
            hasError = true;
        }
        
        if (hasError) return;
        
        // Show loading state
        const submitBtn = document.getElementById('modalSubmitBtn');
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...';
        submitBtn.disabled = true;
        
        // Simulate API call (replace with actual implementation)
        setTimeout(() => {
            // Reset button
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
            
            // Show success message
            alert('Đổi mật khẩu thành công!');
            
            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('changePasswordModal'));
            modal.hide();
            
            // Reset form
            document.getElementById('modalChangePasswordForm').reset();
            document.getElementById('modalPasswordStrength').style.width = '0%';
            document.getElementById('modalPasswordStrengthText').textContent = 'Độ mạnh mật khẩu';
            document.getElementById('modalPasswordMatch').textContent = '';
        }, 2000);
    }
    
    function showModalError(fieldId, message) {
        const field = document.getElementById(fieldId);
        const errorDiv = document.getElementById(fieldId + '-error');
        
        field.classList.add('is-invalid');
        errorDiv.textContent = message;
    }
    
    // Event listeners for modal
    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('changePasswordModal');
        if (modal) {
            const newPasswordField = document.getElementById('modalNewPassword');
            const confirmPasswordField = document.getElementById('modalConfirmPassword');
            
            if (newPasswordField) {
                newPasswordField.addEventListener('input', function() {
                    checkModalPasswordStrength(this.value);
                    checkModalPasswordMatch();
                });
            }
            
            if (confirmPasswordField) {
                confirmPasswordField.addEventListener('input', checkModalPasswordMatch);
            }
            
            // Reset form when modal is closed
            modal.addEventListener('hidden.bs.modal', function() {
                document.getElementById('modalChangePasswordForm').reset();
                document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
                document.querySelectorAll('.invalid-feedback').forEach(el => el.textContent = '');
                document.getElementById('modalPasswordStrength').style.width = '0%';
                document.getElementById('modalPasswordStrengthText').textContent = 'Độ mạnh mật khẩu';
                document.getElementById('modalPasswordMatch').textContent = '';
            });
        }
    });
</script>