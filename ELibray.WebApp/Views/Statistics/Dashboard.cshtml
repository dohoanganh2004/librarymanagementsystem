</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Chart configurations
        const chartColors = {
            primary: '#4e73df',
            success: '#1cc88a',
            info: '#36b9cc',
            warning: '#f6c23e',
            danger: '#e74a3b'
        };

        // Checkout Trend Chart
        const checkoutCtx = document.getElementById('checkoutChart').getContext('2d');
        let checkoutChart = new Chart(checkoutCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.CheckoutTrend.Select(c => c.Label))),
                datasets: [{
                    label: 'S·ªë l∆∞·ª£t m∆∞·ª£n',
                    data: @Html.Raw(Json.Serialize(Model.CheckoutTrend.Select(c => c.Value))),
                    borderColor: chartColors.primary,
                    backgroundColor: chartColors.primary + '20',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Category Pie Chart
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        const categoryChart = new Chart(categoryCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.CategoryStats.Select(c => c.CategoryName))),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.CategoryStats.Select(c => c.BookCount))),
                    backgroundColor: [
                        chartColors.primary,
                        chartColors.success,
                        chartColors.info,
                        chartColors.warning,
                        chartColors.danger,
                        '#858796',
                        '#5a5c69'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Registration Chart
        const registrationCtx = document.getElementById('registrationChart').getContext('2d');
        const registrationChart = new Chart(registrationCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.RegistrationTrend.Select(r => r.Label))),
                datasets: [{
                    label: 'ƒêƒÉng k√Ω m·ªõi',
                    data: @Html.Raw(Json.Serialize(Model.RegistrationTrend.Select(r => r.Value))),
                    backgroundColor: chartColors.success,
                    borderColor: chartColors.success,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Functions
        function updateCheckoutChart(period) {
            fetch(`/Statistics/GetChartData?type=checkout&period=${period}`)
                .then(response => response.json())
                .then(data => {
                    checkoutChart.data.labels = data.labels;
                    checkoutChart.data.datasets[0].data = data.data;
                    checkoutChart.update();
                });
        }

        function refreshDashboard() {
            location.reload();
        }

        function exportReport() {
            window.open('/Statistics/ExportReport?type=dashboard&period=month', '_blank');
        }

        // Auto refresh every 5 minutes
        setInterval(function() {
            updateCheckoutChart('month');
        }, 300000);
    </script>
}

