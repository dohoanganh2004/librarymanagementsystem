@model E_Library.Models.Reader

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-header">
    <div class="brand-logo">EL</div>
    <h1>Tạo tài khoản</h1>
    <p>Bắt đầu hành trình với E-Library</p>
</div>

<form asp-action="Register" asp-controller="Auth" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label">Họ</label>
            <input class="form-control" asp-for="LastName" placeholder="Nhập họ" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label">Tên</label>
            <input class="form-control" asp-for="FirstName" placeholder="Nhập tên" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input class="form-control" asp-for="Email" type="email" placeholder="Nhập địa chỉ email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Mật khẩu</label>
        <input class="form-control" asp-for="Password" type="password" placeholder="Tạo mật khẩu" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="DoB" class="form-label">Ngày sinh</label>
            <input class="form-control" asp-for="DoB" type="date" />
            <span asp-validation-for="DoB" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
            <input class="form-control" asp-for="PhoneNumber" placeholder="Nhập số điện thoại" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Địa chỉ</label>
        <input class="form-control" asp-for="Address" placeholder="Nhập địa chỉ" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>

<div class="auth-links">
    <p class="mb-0">
        Đã có tài khoản? 
        <a asp-controller="Auth" asp-action="Login">Đăng nhập ngay</a>
    </p>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}